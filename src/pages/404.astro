---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<MainLayout 
  title="404 - Page Not Found | Antareep's Blog"
  description="Sorry, the page you're looking for doesn't exist."
>
  <div class="min-h-screen bg-light-bg dark:bg-dark-bg text-light-text dark:text-dark-text transition-colors duration-300">
    <Header />
    
    <main class="max-w-4xl mx-auto px-6 py-16">
      <div class="text-center space-y-8">
        <!-- 404 Number -->
        <h1 class="font-eb-garamond text-8xl md:text-9xl font-bold text-light-text/20 dark:text-dark-text/20 select-none">
          404
        </h1>
        
        <!-- Main heading -->
        <div class="space-y-4">
          <h2 class="font-eb-garamond text-3xl md:text-4xl font-bold text-light-text dark:text-dark-text">
            Page Not Found
          </h2>
          <p class="font-newsreader text-lg text-light-text/70 dark:text-dark-text/70 max-w-2xl mx-auto leading-relaxed">
            Perhaps it was never here, or maybe it's just taking a well-deserved break.
          </p>
        </div>
        
        <!-- Action buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-8">
          <button 
            onclick="history.back()" 
            class="inline-flex items-center gap-2 border border-light-text/20 dark:border-dark-text/20 text-light-text dark:text-dark-text px-6 py-3 rounded-lg font-newsreader font-medium hover:bg-light-text/5 dark:hover:bg-dark-text/5 transition-all duration-200"
          >
            <svg 
              width="20" 
              height="20" 
              viewBox="0 0 24 24" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2" 
              stroke-linecap="round" 
              stroke-linejoin="round"
            >
              <path d="m12 19-7-7 7-7"/>
              <path d="M19 12H5"/>
            </svg>
            Go back
          </button>
        </div>
      </div>
    </main>
    
    <Footer />
  </div>
</MainLayout>

<style>
  /* Add a subtle animation to the 404 number */
  h1 {
    animation: float 6s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  /* Add hover effects for interactive elements */
  a, button {
    transform-origin: center;
  }
</style>
